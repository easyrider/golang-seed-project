{{define "posts_submit_comment" "base"}}
    {{block "content"}}
        <div class="content container narrow" role="main">
            <div class="well">
                <legend>New Comment</legend>

                {{range .Errors}}
                <div class="alert alert-danger">{{.}}</div>
                {{else}}{{end}}

                <form class="comment-form top-comment-form" role="form" action="{{ route .Router "posts_submit_comment" }}" method="POST">
                    <div class="form-group">
                        <label for="content">Comment</label>
                        <textarea class="form-control" name="content" id="content" data-provide="markdown" rows="10"></textarea>
                    </div>
                    <input type="hidden" name="post" value="{{.Post.Id}}" />
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div><!-- /.container -->
    {{end}}
{{end}}
